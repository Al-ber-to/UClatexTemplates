{
	
	\ifx\insertframesubtitle\@empty%
	{
	\begin{tikzpicture}[remember picture, overlay]

		\shade[left color=UClight,right color=UCdark] ($(current page.north west)+(0,-1)$) rectangle ++(\paperwidth,1);
		\node [anchor=north east,inner sep=0] (logo1) at (current page.north east) {\includegraphics[height=1cm,keepaspectratio]{./templateImages/UC_LogotipoVReducida-02_blanco.png}};
		\shade[left color=UCdark,right color=white] ($(current page.north west)+(0,-1)$) rectangle ++(\paperwidth,-0.75mm);
		
		\node [anchor=west,text width=10cm] at ($(current page.north west)+(0.1,-0.5)$) {\Large\color{white}\insertframetitle};
		\node [anchor=north east, align=flush right, text width=11.1cm,inner sep=0] at ($(current page.north east)+(-0.1,-1)+(0,-0.75mm)$) {
			\tiny\textbf{\textsc{\color{UCdark}\inserttitle}} {\color{UClight} - \insertpagenumber/\insertdocumentendpage}% - \insertpageratio}
		};
		
	\end{tikzpicture}
	}
	\else
	{
	\begin{tikzpicture}[remember picture, overlay]
		
		\shade[left color=UClight,right color=UCdark] ($(current page.north west)+(0,-1)$) rectangle ++(\paperwidth,1);
		\node [anchor=north east,inner sep=0] (logo1) at (current page.north east) {\includegraphics[height=1cm,keepaspectratio]{./templateImages/UC_LogotipoVReducida-02_blanco.png}};
		\shade[left color=UCdark,right color=white] ($(current page.north west)+(0,-1)$) rectangle ++(\paperwidth,-0.75mm);
		
		\node [anchor=south west,text width=10cm,inner sep=1] at ($(current page.north west)+(0.1,-0.5)$) {\Large\color{white}\insertframetitle};
		\node [anchor=north west,text width=10cm,inner sep=1] at ($(current page.north west)+(0.1,-0.5)$) {\small\textbf{\color{UCdark}\insertframesubtitle}};
		\node [anchor=north east, align=flush right, text width=11.1cm,inner sep=0] at ($(current page.north east)+(-0.1,-1)+(0,-0.75mm)$) {
			\tiny\textbf{\textsc{\color{UCdark}\inserttitle}} {\color{UClight} - \insertpagenumber/\insertdocumentendpage}% - \insertpageratio}
		};
		
	\end{tikzpicture}
	}
	\fi
	\vspace{0.3cm}
